{
  "$schema": {
    "$type": "other",
    "$value": "https://design-tokens.org/schemas/1.0/schema.json"
  },
  "skeleton": {
    "background": {
      "$type": "color",
      "$value": "{color.surface.muted}"
    },
    "highlight": {
      "$type": "color",
      "$value": "{color.surface.subtle}"
    },
    "borderRadius": {
      "rectangular": {
        "$type": "borderRadius",
        "$value": "0"
      },
      "rounded": {
        "$type": "borderRadius",
        "$value": "{border.radius.md}"
      },
      "circular": {
        "$type": "borderRadius",
        "$value": "{border.radius.full}"
      }
    },
    "animation": {
      "duration": {
        "$type": "duration",
        "$value": "1.5s"
      },
      "timingFunction": {
        "$type": "other",
        "$value": "ease-in-out"
      }
    },
    "text": {
      "lineHeight": {
        "$type": "dimension",
        "$value": "{spacing.4}"
      },
      "spacing": {
        "tight": {
          "$type": "dimension",
          "$value": "{spacing.2}"
        },
        "normal": {
          "$type": "dimension",
          "$value": "{spacing.3}"
        }
      }
    },
    "avatar": {
      "size": {
        "xs": {
          "$type": "dimension",
          "$value": "{spacing.6}"
        },
        "sm": {
          "$type": "dimension",
          "$value": "{spacing.8}"
        },
        "md": {
          "$type": "dimension",
          "$value": "{spacing.10}"
        },
        "lg": {
          "$type": "dimension",
          "$value": "{spacing.12}"
        },
        "xl": {
          "$type": "dimension",
          "$value": "{spacing.16}"
        }
      }
    }
  }
}
