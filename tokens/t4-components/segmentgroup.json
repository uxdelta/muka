{
  "$schema": {
    "$type": "other",
    "$value": "https://design-tokens.org/schemas/1.0/schema.json"
  },
  "segmentgroup": {
    "container": {
      "background": {
        "$type": "color",
        "$value": "{color.surface.level2}"
      },
      "radius": {
        "$type": "borderRadius",
        "$value": "{border.radius.full}"
      },
      "padding": {
        "$type": "dimension",
        "$value": "{spacing.1}"
      },
      "shadow": {
        "$type": "boxShadow",
        "$value": "{shadow.sunken}"
      }
    },
    "segment": {
      "color": {
        "selected": {
          "background": {
            "$type": "color",
            "$value": "{color.surface.level3}"
          },
          "foreground": {
            "$type": "color",
            "$value": "{color.text.default.default}"
          }
        },
        "unselected": {
          "background": {
            "$type": "color",
            "$value": "transparent"
          },
          "foreground": {
            "$type": "color",
            "$value": "{color.text.subtle.default}"
          }
        },
        "hover": {
          "foreground": {
            "$type": "color",
            "$value": "{color.text.default.default}"
          }
        }
      },
      "shadow": {
        "selected": {
          "$type": "boxShadow",
          "$value": "{shadow.level1}"
        },
        "unselected": {
          "$type": "boxShadow",
          "$value": "none"
        }
      },
      "radius": {
        "$type": "borderRadius",
        "$value": "{border.radius.xl}"
      },
      "padding": {
        "sm": {
          "x": {
            "$type": "dimension",
            "$value": "{spacing.4}"
          },
          "y": {
            "$type": "dimension",
            "$value": "0"
          }
        },
        "md": {
          "x": {
            "$type": "dimension",
            "$value": "{spacing.5}"
          },
          "y": {
            "$type": "dimension",
            "$value": "{spacing.2}"
          }
        },
        "lg": {
          "x": {
            "$type": "dimension",
            "$value": "{spacing.6}"
          },
          "y": {
            "$type": "dimension",
            "$value": "{spacing.2}"
          }
        }
      },
      "height": {
        "sm": {
          "$type": "dimension",
          "$value": "{font.size.2xl}"
        }
      }
    }
  }
}
