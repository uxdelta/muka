{
  "$schema": {
    "$type": "other",
    "$value": "https://design-tokens.org/schemas/1.0/schema.json"
  },
  "topbar": {
    "color": {
      "background": {
        "$type": "color",
        "$value": "{color.surface.level3}"
      },
      "foreground": {
        "$type": "color",
        "$value": "{color.text.default.default}"
      },
      "border": {
        "$type": "color",
        "$value": "{color.border.default}"
      }
    },
    "height": {
      "mobile": {
        "$type": "dimension",
        "$value": "64px"
      },
      "desktop": {
        "$type": "dimension",
        "$value": "80px"
      }
    },
    "padding": {
      "x": {
        "$type": "dimension",
        "$value": "{spacing.3}"
      }
    },
    "title": {
      "max-width": {
        "$type": "dimension",
        "$value": "197px"
      }
    },
    "icon": {
      "size": {
        "mobile": {
          "$type": "dimension",
          "$value": "24px"
        },
        "desktop": {
          "$type": "dimension",
          "$value": "32px"
        }
      }
    },
    "button": {
      "size": {
        "mobile": {
          "$type": "dimension",
          "$value": "48px"
        },
        "desktop": {
          "$type": "dimension",
          "$value": "64px"
        }
      }
    },
    "drag-handle": {
      "width": {
        "$type": "dimension",
        "$value": "54px"
      },
      "height": {
        "$type": "dimension",
        "$value": "4px"
      },
      "color": {
        "$type": "color",
        "$value": "{color.border.default}"
      },
      "padding-y": {
        "$type": "dimension",
        "$value": "{spacing.3}"
      },
      "radius": {
        "$type": "borderRadius",
        "$value": "{border.radius.full}"
      }
    }
  },
  "controlbar": {
    "color": {
      "background": {
        "$type": "color",
        "$value": "{color.surface.level3}"
      }
    },
    "padding": {
      "x": {
        "$type": "dimension",
        "$value": "{spacing.4}"
      },
      "bottom": {
        "$type": "dimension",
        "$value": "{spacing.3}"
      }
    },
    "gap": {
      "$type": "dimension",
      "$value": "{spacing.2}"
    }
  }
}
