{
  "$schema": {
    "$type": "other",
    "$value": "https://design-tokens.org/schemas/1.0/schema.json"
  },
  "select": {
    "field": {
      "color": {
        "default": {
          "background": {
            "$type": "color",
            "$value": "{color.surface.level3}"
          },
          "foreground": {
            "$type": "color",
            "$value": "{color.text.default.default}"
          },
          "border": {
            "$type": "color",
            "$value": "{color.border.contrast}"
          }
        },
        "hover": {
          "background": {
            "$type": "color",
            "$value": "{color.surface.level3}"
          },
          "foreground": {
            "$type": "color",
            "$value": "{color.text.default.default}"
          },
          "border": {
            "$type": "color",
            "$value": "{color.border.contrast}"
          }
        },
        "focus": {
          "background": {
            "$type": "color",
            "$value": "{color.surface.level3}"
          },
          "foreground": {
            "$type": "color",
            "$value": "{color.text.default.default}"
          },
          "border": {
            "$type": "color",
            "$value": "{color.action.default}"
          }
        },
        "error": {
          "background": {
            "$type": "color",
            "$value": "{color.surface.level3}"
          },
          "foreground": {
            "$type": "color",
            "$value": "{color.text.default.default}"
          },
          "border": {
            "$type": "color",
            "$value": "{color.state.error.contrast}"
          }
        },
        "disabled": {
          "background": {
            "$type": "color",
            "$value": "{color.surface.level1}"
          },
          "foreground": {
            "$type": "color",
            "$value": "{color.text.subtle.default}"
          },
          "border": {
            "$type": "color",
            "$value": "{color.border.default}"
          }
        }
      },
      "radius": {
        "sm": {
          "$type": "borderRadius",
          "$value": "{border.radius.sm}"
        },
        "md": {
          "$type": "borderRadius",
          "$value": "{border.radius.md}"
        },
        "lg": {
          "$type": "borderRadius",
          "$value": "{border.radius.lg}"
        }
      },
      "padding": {
        "x": {
          "$type": "dimension",
          "$value": "{spacing.3}"
        },
        "y": {
          "$type": "dimension",
          "$value": "{spacing.2}"
        }
      },
      "height": {
        "sm": {
          "$type": "dimension",
          "$value": "{size.2xl}"
        },
        "default": {
          "$type": "dimension",
          "$value": "{size.3xl}"
        },
        "lg": {
          "$type": "dimension",
          "$value": "{size.4xl}"
        }
      }
    }
  }
}