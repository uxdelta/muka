{
  "name": "@muka/design-system",
  "version": "0.1.0",
  "description": "Muka Design System - Multi-brand design tokens and React components",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "tokens",
    "styles"
  ],
  "scripts": {
    "build": "npm run build:tokens && npm run build:components",
    "build:tokens": "node scripts/build-tokens.js",
    "build:components": "npm run build:esm && npm run build:cjs && npm run build:types",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:types": "tsc --project tsconfig.types.json",
    "dev": "npm run storybook",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:visual": "vitest run --config vitest.browser.config.ts",
    "test:visual:update": "vitest run --config vitest.browser.config.ts -u",
    "test:ui": "vitest --ui",
    "figma:connect": "figma-code-connect",
    "figma:connect:dev": "figma-code-connect --dev",
    "figma:connect:publish": "figma-code-connect --publish",
    "lint": "eslint . --ext .ts,.tsx",
    "validate:tokens": "node scripts/validate-tokens.js",
    "setup:automation": "node scripts/setup-automation.js",
    "disable:automation": "node scripts/disable-automation.js",
    "enable:automation": "node scripts/enable-automation.js",
    "check:automation": "node scripts/check-automation-status.js",
    "diagnose:deployment": "node scripts/diagnose-deployment.js",
    "check:deployment": "node scripts/check-deployment-status.js",
    "deploy:manual": "node scripts/manual-deploy.js",
    "deploy:gh-pages": "node scripts/deploy-to-gh-pages.js",
    "postinstall": "husky install",
    "prepare": "husky"
  },
  "keywords": [
    "design-system",
    "design-tokens",
    "react",
    "multi-brand",
    "ai-design-system"
  ],
  "author": "Revi KÃ¶rnmann",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@figma/code-connect": "^1.3.8",
    "@playwright/test": "^1.56.1",
    "@storybook/addon-docs": "^9.1.4",
    "@storybook/addon-onboarding": "^9.1.4",
    "@storybook/react-vite": "^9.1.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/browser": "^4.0.5",
    "@vitest/ui": "^4.0.5",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "playwright": "^1.56.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "storybook": "^9.1.4",
    "typescript": "^5.0.0",
    "vitest": "^4.0.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uxdelta/muka.git"
  },
  "bugs": {
    "url": "https://github.com/uxdelta/muka/issues"
  },
  "homepage": "https://github.com/uxdelta/muka#readme"
}
