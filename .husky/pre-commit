# Build tokens if any token files are being committed
if git diff --cached --name-only | grep -E "(tokens/|build/manifest.json)" > /dev/null; then
  echo "ğŸ¨ Token files detected, rebuilding CSS..."
  npm run build:tokens
  
  # Add any updated CSS files to the commit
  git add styles/
  echo "âœ… Updated CSS files added to commit"
fi

