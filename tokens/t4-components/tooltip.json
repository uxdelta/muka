{
  "$schema": {
    "$type": "other",
    "$value": "https://design-tokens.org/schemas/1.0/schema.json"
  },
  "tooltip": {
    "content": {
      "color": {
        "default": {
          "background": {
            "$type": "color",
            "$value": "{color.surface.inverse}"
          },
          "foreground": {
            "$type": "color",
            "$value": "{color.text.inverse.default}"
          }
        },
        "contrast": {
          "background": {
            "$type": "color",
            "$value": "{color.surface.level3}"
          },
          "foreground": {
            "$type": "color",
            "$value": "{color.text.default.default}"
          },
          "border": {
            "$type": "color",
            "$value": "{color.border.muted}"
          }
        }
      },
      "border": {
        "radius": {
          "$type": "borderRadius",
          "$value": "{border.radius.md}"
        },
        "width": {
          "$type": "borderWidth",
          "$value": "{border.width.regular}"
        }
      },
      "shadow": {
        "default": {
          "$type": "boxShadow",
          "$value": "{shadow.level2}"
        },
        "contrast": {
          "$type": "boxShadow",
          "$value": "{shadow.level3}"
        }
      },
      "padding": {
        "x": {
          "$type": "dimension",
          "$value": "{spacing.3}"
        },
        "y": {
          "$type": "dimension",
          "$value": "{spacing.2}"
        }
      },
      "max-width": {
        "$type": "dimension",
        "$value": "20rem"
      },
      "z-index": {
        "$type": "other",
        "$value": "9999"
      }
    },
    "arrow": {
      "size": {
        "$type": "dimension",
        "$value": "{spacing.2}"
      }
    }
  }
}
