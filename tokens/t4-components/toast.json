{
  "$schema": {
    "$type": "other",
    "$value": "https://design-tokens.org/schemas/1.0/schema.json"
  },
  "toast": {
    "color": {
      "info": {
        "background": {
          "$type": "color",
          "$value": "{color.surface.inverse}"
        },
        "foreground": {
          "$type": "color",
          "$value": "{color.text.default.inverse}"
        },
        "accent": {
          "$type": "color",
          "$value": "{alias.color.state.info.muted}"
        }
      },
      "success": {
        "background": {
          "$type": "color",
          "$value": "{color.surface.inverse}"
        },
        "foreground": {
          "$type": "color",
          "$value": "{color.text.default.inverse}"
        },
        "accent": {
          "$type": "color",
          "$value": "{alias.color.state.success.muted}"
        }
      },
      "warning": {
        "background": {
          "$type": "color",
          "$value": "{color.surface.inverse}"
        },
        "foreground": {
          "$type": "color",
          "$value": "{color.text.default.inverse}"
        },
        "accent": {
          "$type": "color",
          "$value": "{alias.color.state.warning.muted}"
        }
      },
      "error": {
        "background": {
          "$type": "color",
          "$value": "{color.surface.inverse}"
        },
        "foreground": {
          "$type": "color",
          "$value": "{color.text.default.inverse}"
        },
        "accent": {
          "$type": "color",
          "$value": "{alias.color.state.error.muted}"
        }
      }
    },
    "padding": {
      "x": {
        "$type": "dimension",
        "$value": "{spacing.4}"
      },
      "y": {
        "$type": "dimension",
        "$value": "{spacing.3}"
      }
    },
    "radius": {
      "$type": "borderRadius",
      "$value": "{alias.radius.lg}"
    },
    "gap": {
      "$type": "dimension",
      "$value": "{spacing.3}"
    },
    "icon": {
      "size": {
        "$type": "dimension",
        "$value": "{size.md}"
      }
    },
    "shadow": {
      "$type": "boxShadow",
      "$value": "{shadow.400}"
    },
    "width": {
      "min": {
        "$type": "dimension",
        "$value": "280px"
      },
      "max": {
        "$type": "dimension",
        "$value": "420px"
      }
    }
  }
}